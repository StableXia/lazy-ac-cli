#!/usr/bin/env node

const program = require('commander')
const createGitignore = require('../helps/createGitignore')

program
  .version(require('../package').version)
  .usage('<我就知道你会来的>')
  .command('-gitignore', '快速生成 .gitignore 文件')

program.parse(process.argv)

const args = program.args || []
console.log(args)
if (args[0] === 'gitignore') {
  createGitignore()
}
